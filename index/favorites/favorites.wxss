/* index/favorites/favorites.wxss */
.favorites-container {
  min-height: 100vh;
  padding: 20rpx;
  background: #f6fbff;
}

.favorites-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
}

.refresh-btn {
  background: #4facfe;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.loading-state {
  text-align: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #95a5a6;
}

.error-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #e74c3c;
  margin-bottom: 30rpx;
}

.retry-btn {
  background: #e74c3c;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  display: inline-block;
}

.favorites-list {
  height: calc(100vh - 200rpx);
}

.favorite-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.music-info {
  flex: 1;
}

.music-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.music-author {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}

.add-time {
  font-size: 24rpx;
  color: #bdc3c7;
}

.remove-btn {
  background: #ff6b6b;
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #95a5a6;
  margin-bottom: 15rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #bdc3c7;
}