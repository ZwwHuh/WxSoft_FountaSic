.index-container {
  min-height: 100vh;
  padding: 20rpx;
}

.search-section {
  margin-bottom: 30rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.search-clear {
  width: 32rpx;
  height: 32rpx;
}

.search-clear image {
  width: 100%;
  height: 100%;
}

.music-list {
  height: calc(100vh - 200rpx);
}

.music-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.music-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.music-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  flex: 1;
  margin-right: 20rpx;
}

/* 修改收藏按钮样式，确保点击区域合适 */
.fav-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
  margin: -8rpx; /* 增加点击区域 */
}

.fav-btn image {
  width: 36rpx;
  height: 36rpx;
  transition: all 0.3s ease;
}

.fav-btn.active image {
  transform: scale(1.1);
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.music-author {
  font-size: 28rpx;
  color: #7f8c8d;
}

.music-duration {
  font-size: 24rpx;
  color: #bdc3c7;
}

.load-more, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #95a5a6;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-state image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-state text {
  font-size: 28rpx;
  color: #95a5a6;
}