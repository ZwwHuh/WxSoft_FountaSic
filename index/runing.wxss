/* index/running.wxss */
.container {
  height: 100vh;
  background-color: #efecf3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0rpx 40rpx;
}

.music-info {
  margin-top: 80rpx;
  height: 15%;
  text-align: center;
  margin-bottom: 20rpx; /* 减少底部间距 */
}

.music-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.music-author {
  display: block;
  font-size: 32rpx;
  color: #666;
}

/* 进度条样式 */
.progress-section {
  width: 80%;
  margin-bottom: 60rpx;
  text-align: center;
}

.progress-time {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #ddd;
  border-radius: 4rpx;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: rgb(190, 162, 186);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.control-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgb(190, 162, 186);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin-bottom: 100rpx;
}

.play-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.8;
}

/* 音量控制 */
.volume-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.volume-label {
  display: block;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.volume-controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.volume-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #beb3d3;
  background: white;
  color: #ca6ad3;
  font-size: 48rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.volume-bar {
  flex: 1;
  height: 8rpx;
  background: #ddd;
  border-radius: 4rpx;
  margin: 0 40rpx;
  position: relative;
}

.volume-fill {
  height: 100%;
  background:rgb(190, 162, 186);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 音乐ID */
.id-section {
  margin-top: auto; /* 关键：自动占据剩余空间，推到最底部 */
  margin-bottom: 40rpx; /* 底部留一些间距 */
}

.id-text {
  font-size: 28rpx;
  color: #999;
}
/* 禁止页面滚动 */
page {
  overflow: hidden;
  height: 100vh;
}