.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #ffffff;
  border-top: 1rpx solid #e0e0e0;
  padding: 10rpx 0;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 999;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
  transition: all 0.3s ease;
}

.tab-bar-item.active {
  transform: translateY(-4rpx);
}

.tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.tab-bar-text {
  font-size: 22rpx;
  color: #7A7E83;
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-bar-text {
  color: #007AFF;
  font-weight: 500;
}