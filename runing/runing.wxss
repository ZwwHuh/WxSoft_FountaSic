.playing-container {
  min-height: 100vh;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.music-info {
  text-align: center;
  margin-top: 60rpx;
}

.album-cover {
  width: 300rpx;
  height: 300rpx;
  border-radius: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.music-name {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.music-author {
  font-size: 32rpx;
  opacity: 0.8;
}

.progress-section {
  margin: 60rpx 0;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: #ffffff;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.time-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.7;
}

.control-section {
  margin-bottom: 60rpx;
}

.volume-control {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.volume-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  margin: 0 30rpx;
  transition: all 0.3s;
}

.volume-btn:active {
  background: rgba(255, 255, 255, 0.2);
}

.volume-btn image {
  width: 32rpx;
  height: 32rpx;
}

.volume-text {
  font-size: 28rpx;
  opacity: 0.8;
}

.play-control {
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 40rpx;
  transition: all 0.3s;
}

.control-btn:active {
  opacity: 0.7;
}

.control-btn image {
  width: 40rpx;
  height: 40rpx;
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s;
}

.play-btn.playing {
  background: #ff6b6b;
}

.play-btn:active {
  transform: scale(0.95);
}

.play-btn image {
  width: 50rpx;
  height: 50rpx;
}