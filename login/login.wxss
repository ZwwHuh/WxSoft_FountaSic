.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 60rpx;
}

.login-title {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.avatar-section {
  margin-bottom: 80rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  padding: 0;
  background: transparent;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 20rpx;
}

.form-section {
  width: 100%;
}

.input-group {
  margin-bottom: 60rpx;
}

.input-label {
  display: block;
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.nickname-input {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  font-size: 32rpx;
  color: #333333;
  border: 2rpx solid transparent;
}

.nickname-input:focus {
  border-color: #ffffff;
  background: #ffffff;
}

.login-btn {
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e8e 100%);
  border-radius: 50rpx;
  padding: 28rpx;
  margin-bottom: 40rpx;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.4);
}

.login-btn::after {
  border: none;
}

.btn-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
}

.login-tips {
  text-align: center;
}

.login-tips text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}